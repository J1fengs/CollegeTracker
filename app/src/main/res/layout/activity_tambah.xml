<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0171"
    tools:context=".MainActivity"
    >

    <ImageButton
        android:id="@+id/btnSubmitData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:background="#0A0171"
        android:backgroundTint="#0A0171"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deadlineTugas"
        app:srcCompat="@drawable/login_button" />

    <EditText
        android:id="@+id/judulTugas"
        android:layout_width="335dp"
        android:layout_height="58dp"
        android:background="@drawable/login_edittext_bg"
        android:ems="10"
        android:hint="Judul tugas"
        android:textColor="@color/white"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/titleForm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/descTugas"
        android:layout_width="335dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/login_edittext_bg"
        android:ems="10"
        android:hint="Deskripsi Tugas"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/judulTugas"
        />

    <EditText
        android:id="@+id/deadlineTugas"
        android:layout_width="335dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/login_edittext_bg"
        android:ems="10"
        android:hint="Deadline Tugas"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descTugas"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deadlineTugas"
        />

    <TextView
        android:id="@+id/titleForm"
        android:layout_width="323dp"
        android:layout_height="63dp"
        android:gravity="center"
        android:layout_marginTop="140dp"
        android:text="Tambah Tugas"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>